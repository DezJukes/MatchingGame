<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenu_bg"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textview_first"
            android:layout_width="363dp"
            android:layout_height="207dp"
            android:fontFamily="@font/kavoonregular"
            android:shadowColor="#30254E"
            android:shadowDx="15"
            android:shadowDy="20"
            android:shadowRadius="30"
            android:text="@string/matching_ngame"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="73sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.204" />

        <Button
            android:id="@+id/button_first"
            android:layout_width="242dp"
            android:layout_height="70dp"
            android:layout_marginTop="356dp"
            android:fontFamily="@font/kavoonregular"
            android:text="PLAY"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_second"
            android:layout_width="197dp"
            android:layout_height="60dp"
            android:layout_marginTop="436dp"
            android:fontFamily="@font/kavoonregular"
            android:text="HOW TO PLAY"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_Third"
            android:layout_width="174dp"
            android:layout_height="46dp"
            android:layout_marginTop="508dp"
            android:fontFamily="@font/kavoonregular"
            android:text="Exit"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="177dp"
            android:layout_height="81dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/kavoonregular"
            android:shadowColor="#30254E"
            android:shadowDx="15"
            android:shadowDy="10"
            android:shadowRadius="50"
            android:text="@string/about_us_label"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_Third"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>