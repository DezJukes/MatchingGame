<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.matchinggamebeta.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_levelSelect"
            app:destination="@id/levelSelect" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.matchinggamebeta.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">
        <action
            android:id="@+id/action_SecondFragment_to_leaderboard"
            app:destination="@id/leaderboard" />
        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_pop"
            app:popUpTo="@id/SecondFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/levelSelect"
        android:name="com.example.matchinggamebeta.LevelSelect"
        android:label="fragment_level_select"
        tools:layout="@layout/fragment_level_select" >
        <action
            android:id="@+id/action_levelSelect_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <dialog
        android:id="@+id/popUpScreen"
        android:name="com.example.matchinggamebeta.popUpScreen"
        android:label="fragment_pop_up_screen"
        tools:layout="@layout/fragment_pop_up_screen" />
    <fragment
        android:id="@+id/leaderboard"
        android:name="com.example.matchinggamebeta.Leaderboard"
        android:label="fragment_leaderboard"
        tools:layout="@layout/fragment_leaderboard" />
</navigation>